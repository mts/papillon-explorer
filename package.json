{
  "name": "papillon-explorer",
  "description": "Component Explorer for Papillon",
  "homepage": "https://github.com/mts/papillon-explorer/#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mts/papillon-explorer.git"
  },
  "scripts": {
    "release": "lerna publish",
    "uninstall-packages": "lerna run uninstall-packages --stream",
    "install-packages": "lerna run install-packages --stream",
    "reinstall-packages": "lerna run reinstall-packages --stream",
    "npm-update": "lerna run npm-update",
    "heroku-prebuild": "echo This runs before Heroku installs your dependencies",
    "start": "lerna run serve --stream",
    "heroku-postbuild": "npm run install-packages",
    "deploy-client": "gh-pages -d packages/client/build",
    "deploy": "npm-run-all build deploy-client",
    "bootstrap": "npm-run-all build lint:format test report-coverage",
    "lint:format": "npm-run-all lint format",
    "lint": "npm-run-all lint:js:jsx lint:scss",
    "lint:js:jsx": "eslint --ext .js --ext .jsx packages/**/src/**/*.{js,jsx} --fix",
    "lint:scss": "stylelint \"packages/**/src/**/*.{css,scss}\" --syntax=scss --fix",
    "format": "npm-run-all format:js:jsx format:scss",
    "format:js:jsx": "prettier --write \"packages/**/src/**/*.{js,jsx}\"",
    "format:scss": "prettier --write \"packages/**/src/**/*.{css,scss}\"",
    "test": "jest -u --no-cache --silent --runInBand --coverage",
    "test:coverage": "jest --coverage --silent",
    "report-coverage": "codecov",
    "build": "lerna run build --stream"
  },
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/plugin-transform-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/runtime": "^7.6.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.5.1",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.1",
    "lerna": "^3.18.1",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-test-renderer": "^16.10.2",
    "regenerator-runtime": "^0.13.3",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1"
  }
}
