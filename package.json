{
  "name": "papillon-explorer",
  "description": "Papillon Explorer",
  "repository": "https://github.com/mts/papillon-explorer",
  "license": "MIT",
  "scripts": {
    "release": "lerna publish",
    "uninstall-packages": "lerna run uninstall-packages --stream",
    "install-packages": "lerna run install-packages --stream",
    "reinstall-packages": "lerna run reinstall-packages --stream",
    "npm-update": "lerna run npm-update",
    "heroku-prebuild": "echo This runs before Heroku installs your dependencies",
    "start": "lerna run serve --stream",
    "heroku-postbuild": "npm run install-packages",
    "deploy-client": "gh-pages -d packages/client/build",
    "deploy": "npm-run-all build deploy-client",
    "bootstrap": "npm-run-all lint:format test build",
    "lint:format": "npm-run-all lint format",
    "lint": "npm-run-all lint:js:jsx lint:scss",
    "lint:js:jsx": "eslint --ext .js --ext .jsx packages/**/src/**/*.{js,jsx} --fix",
    "lint:scss": "stylelint \"packages/**/src/**/*.{css,scss}\" --syntax=scss --fix",
    "format": "npm-run-all format:js:jsx format:scss",
    "format:js:jsx": "prettier --write \"packages/**/src/**/*.{js,jsx}\"",
    "format:scss": "prettier --write \"packages/**/src/**/*.{css,scss}\"",
    "test": "jest -u --no-cache --silent --runInBand --coverage",
    "test:coverage": "jest --coverage --silent",
    "report-coverage": "codecov",
    "build": "lerna run build --stream"
  },
  "dependencies": {}
}
